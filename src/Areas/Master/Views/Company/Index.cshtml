@model IEnumerable<Maple2.AdminLTE.Bel.M_Company>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
    <!-- Bootstrap-Switch -->
    <link rel="stylesheet" href="~/plugins/bootstrap-switch/bootstrap-switch.min.css">
    <!-- DataTables -->
    <link rel="stylesheet" href="~/bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css">
    <!-- Buttons -->
    <link rel="stylesheet/scss" type="text/css" href="~/bower_components/datatables-buttons/css/buttons.dataTables.scss">
    <link rel="stylesheet" href="~/plugins/Buttons-1.6.1/css/buttons.dataTables.min.css">
    <!-- Input Picker -->
    <link rel="stylesheet" href="~/plugins/Input-picker/jquery.inputpicker.css">
}
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <!-- DataTables -->
    <script src="~/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
    <!-- Buttons -->
    <script src="~/plugins/Buttons-1.6.1/js/dataTables.buttons.min.js"></script>
    <script src="~/bower_components/datatables-buttons/js/dataTables.buttons.js"></script>
    <script src="~/bower_components/datatables-buttons/js/buttons.html5.js"></script>
    <script src="~/bower_components/datatables-buttons/js/buttons.flash.js"></script>
    <script src="~/bower_components/datatables-buttons/js/buttons.print.js"></script>
    <script src="~/bower_components/jszip/dist/jszip.min.js"></script>
    <!-- Bootstrap-Switch -->
    <script src="~/plugins/bootstrap-switch/bootstrap-switch.min.js"></script>
    <!-- Input Picker -->
    <script src="~/plugins/Input-picker/jquery.inputpicker.js"></script>
    <!-- Page Script -->
    <script src="~/js/Areas/Master/Company/Index.js"></script>
}
<div id="IndexData"
     data-comp-get-url="@Url.Action("GetCompany", "Company", new { Area = "Master" })"
     data-image-url="@Url.Content("~/img")">
</div>
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Company
        <small>Master</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-database"></i> Home</a></li>
        <li><a href="#"> Master</a></li>
        <li class="active">Company</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <!-- Alert Message -->
            <div class="alert alert-success" id="message-alert" style="display:none">
                <button type="button" class="close" data-dismiss="alert">x</button>
                <strong>Success! </strong>
                <span id="sucAlertSpan">Company Status</span>&nbsp;
            </div>
            <div class="box">
                <div class="box-body">
                    <div class="table-responsive">
                        <table id="tblComp" class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.CompanyCode)</th>
                                    <th>@Html.DisplayNameFor(model => model.CompanyName)</th>
                                    <th>@Html.DisplayNameFor(model => model.CompanyLogoPath)</th>
                                    <th>@Html.DisplayNameFor(model => model.AddressL1)</th>
                                    <th>@Html.DisplayNameFor(model => model.Telephone)</th>
                                    <th>@Html.DisplayNameFor(model => model.Fax)</th>
                                    <th>@Html.DisplayNameFor(model => model.CompanyTaxId)</th>
                                    <th>@Html.DisplayNameFor(model => model.Is_Active)</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    <button type="button" class="btn btn-create btn-sm" data-toggle="modal" data-url="@Url.Action("Create","Company", new { Area = "Master" })" id="btnCreateComp">
                        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>&nbsp; Add
                    </button>
                </div>
                <!-- /.box-footer -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
<div class="modal fade" id="newCompModal" tabindex="-1" role="dialog" aria-labelledby="CreateCompModal" aria-hidden="true" data-backdrop="static">
    <div id="newCompContainer">
    </div>
</div>
<div class="modal fade" id="viewCompModal" tabindex="-1" role="dialog" aria-labelledby="ViewCompModal" aria-hidden="true" data-backdrop="static">
    <div id="viewCompContainer">
    </div>
</div>
<div class="modal fade" id="editCompModal" tabindex="-1" role="dialog" aria-labelledby="EditCompModal" aria-hidden="true" data-backdrop="static">
    <div id="editCompContainer">
    </div>
</div>
