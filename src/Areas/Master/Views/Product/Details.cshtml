@model Maple2.AdminLTE.Bel.M_Product

@{
    ViewData["Title"] = "Details";
    Layout = null;
}

<script src="~/js/Areas/Master/Product/Details.js"></script>
<div id="DetailsData"
     data-prodtype-get-url="@Url.Action("GetProductionType", "ProductionType", new { Area = "Master" })"
     data-unit-get-url="@Url.Action("GetUnit", "Unit", new { Area = "Master" })"
     data-wh-get-url="@Url.Action("GetWarehouse", "Warehouse", new { Area = "Master" })"
     data-loc-get-url="@Url.Action("GetLocation", "Location", new { Area = "Master" })"
     data-proc-get-url="@Url.Action("GetProductProcess", "Product", new { Area = "Master" })"
     data-image-url="@Url.Content("~/img")">
</div>
<div class="modal-dialog modal-lg" style="width:1200px;">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span>&nbsp; View</h4>
        </div>
        <div class="box-body pad">

            <div class="form-horizontal">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="Id" type="hidden" />
                <!-- Custom Tabs -->
                <div class="nav-tabs-custom">
                    <ul class="nav nav-tabs">
                        <li class="active"><a href="#tab_1" data-toggle="tab">MAPLe</a></li>
                        <li><a href="#tab_2" data-toggle="tab">SAGE50</a></li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active" id="tab_1">
                            <div class="form-group">
                                <div class="col-md-7">

                                    <div class="form-group row">
                                        <label asp-for="ProductCode" class="control-label input-sm col-md-3"></label>
                                        <div class="col-sm-4">
                                            <input asp-for="ProductCode" class="form-control input-sm text-code" readonly="readonly" />
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label asp-for="ProductName" class="control-label input-sm col-md-3"></label>
                                        <div class="col-sm-9">
                                            <input asp-for="ProductName" class="form-control input-sm" readonly="readonly" />
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label asp-for="ProductNameRef" class="control-label input-sm col-md-3"></label>
                                        <div class="col-sm-9">
                                            <input asp-for="ProductNameRef" class="form-control input-sm" readonly="readonly" />
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label asp-for="ProductDesc" class="control-label input-sm col-md-3"></label>
                                        <div class="col-sm-9">
                                            <input asp-for="ProductDesc" class="form-control input-sm" readonly="readonly" />
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label asp-for="MaterialType" class="control-label input-sm col-md-3"></label>
                                        <div class="col-sm-7">
                                            <input asp-for="MaterialTypeId" type="hidden" />
                                            <div class="input-group">
                                                <input asp-for="MaterialType" class="form-control input-sm" readonly="readonly" />
                                                <span class="input-group-btn">
                                                    <button type="button" class="btn btn-default btn-sm btn-flat" data-toggle="modal" id="btnSearchMatType" disabled>
                                                        <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                                                    </button>
                                                    <button type="button" class="btn btn-default btn-sm btn-flat" id="btnRemoveMatType" disabled>
                                                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                                    </button>
                                                </span>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label asp-for="ProductionType" class="control-label input-sm col-md-3"></label>
                                        <div class="col-sm-5">
                                            <input asp-for="ProductionTypeId" type="hidden" />
                                            <input asp-for="ProductionType" class="form-control input-sm" style="width:200px;" disabled="disabled" />
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label asp-for="Machine" class="control-label input-sm col-md-3"></label>
                                        <div class="col-sm-4">
                                            <input asp-for="MachineId" type="hidden" />
                                            <div class="input-group">
                                                <input asp-for="Machine" class="form-control input-sm" readonly="readonly" />
                                                <span class="input-group-btn">
                                                    <button type="button" class="btn btn-default btn-sm btn-flat" data-toggle="modal" id="btnSearchMc" disabled>
                                                        <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                                                    </button>
                                                    <button type="button" class="btn btn-default btn-sm btn-flat" id="btnRemoveMc" disabled>
                                                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                                    </button>
                                                </span>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label asp-for="PackageStdQty" class="control-label input-sm col-md-3"></label>
                                        <div class="col-sm-4">
                                            <input asp-for="PackageStdQty" class="form-control input-sm text-align-right" type="number" readonly="readonly" />
                                        </div>
                                        <label asp-for="Unit" class="control-label input-sm col-md-1"></label>
                                        <div class="col-sm-4">
                                            <input asp-for="UnitId" type="hidden" />
                                            <input asp-for="Unit" class="form-control input-sm" style="width:120px;" disabled="disabled" />
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label asp-for="Warehouse" class="control-label input-sm col-md-3"></label>
                                        <div class="col-sm-5">
                                            <input asp-for="WarehouseId" type="hidden" />
                                            <input asp-for="Warehouse" class="form-control input-sm" style="width:200px;" disabled="disabled" />
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label asp-for="Location" class="control-label input-sm col-md-3"></label>
                                        <div class="col-sm-4">
                                            <input asp-for="LocationId" type="hidden" />
                                            <input asp-for="Location" class="form-control input-sm" style="width:200px;" disabled="disabled" />
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label asp-for="CompanyCode" class="control-label col-md-3"></label>
                                        <div class="col-sm-9">
                                            <input asp-for="CompanyCode" class="form-control input-sm text-bold" style="width:200px;" readonly="readonly" />
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label asp-for="Is_Active" class="control-label col-md-3"></label>
                                        <div class="col-md-5">
                                            <div class="checkbox">
                                                <label>
                                                    <input asp-for="Is_Active" />
                                                </label>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <div class="col-md-5">
                                    <div class="col-md-12">
                                        <label class="control-label.text-left input-sm col-md-12">&nbsp;PRODUCTION PROCESS</label>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="table-responsive col-md-12">
                                            <table id="tblProdProcess" class="table table-striped table-bordered table-hover">
                                                <thead>
                                                    <tr role="row">
                                                        <th></th>
                                                        <th></th>
                                                        <th>ACTIVE</th>
                                                        <th>STEP</th>
                                                        <th>PROCESS NAME</th>
                                                    </tr>
                                                </thead>
                                            </table>
                                        </div>
                                    </div>
                                    <br />
                                    <div class="col-md-12">
                                        <label asp-for="ProductImagePath" class="control-label.text-left input-sm col-md-12"></label>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="col-md-10">
                                            <div style="width:220px;">
                                                <img id="imageProduct" src='@Url.Content("~/img/products/")@Model.ProductImagePath' onerror="this.src='@Url.Content("~/img/")product_image_empty.png'" alt="Product Image" style="max-width:100%;" />
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <!-- /.tab-pane -->
                        <div class="tab-pane" id="tab_2">
                            <div class="form-group">
                                <label asp-for="SalesPrice1" class="control-label col-md-2"></label>
                                <div class="col-md-4">
                                    <input asp-for="SalesPrice1" class="form-control input-sm text-align-right" readonly="readonly" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="SalesPrice2" class="control-label col-md-2"></label>
                                <div class="col-md-4">
                                    <input asp-for="SalesPrice2" class="form-control input-sm text-align-right" readonly="readonly" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="SalesPrice3" class="control-label col-md-2"></label>
                                <div class="col-md-4">
                                    <input asp-for="SalesPrice3" class="form-control input-sm text-align-right" readonly="readonly" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="SalesPrice4" class="control-label col-md-2"></label>
                                <div class="col-md-4">
                                    <input asp-for="SalesPrice4" class="form-control input-sm text-align-right" readonly="readonly" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="SalesPrice5" class="control-label col-md-2"></label>
                                <div class="col-md-4">
                                    <input asp-for="SalesPrice5" class="form-control input-sm text-align-right" readonly="readonly" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="GLSalesAccount" class="control-label col-md-2"></label>
                                <div class="col-md-4">
                                    <input asp-for="GLSalesAccount" class="form-control input-sm" readonly="readonly" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="GLInventAccount" class="control-label col-md-2"></label>
                                <div class="col-md-4">
                                    <input asp-for="GLInventAccount" class="form-control input-sm" readonly="readonly" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="GLCogsAccount" class="control-label col-md-2"></label>
                                <div class="col-md-4">
                                    <input asp-for="GLCogsAccount" class="form-control input-sm" readonly="readonly" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="RevisionNo" class="control-label col-md-2"></label>
                                <div class="col-md-3">
                                    <input asp-for="RevisionNo" class="form-control input-sm text-align-right" readonly="readonly" />
                                </div>
                            </div>
                        </div>

                    </div>
                    <!-- /.tab-content -->
                </div>
                <!-- nav-tabs-custom -->

            </div>

            <div class="modal-footer">
                <div class="form-group">
                    <button type="button" class="btn btn-default btn-sm" data-dismiss="modal"><span class="fa  fa-rotate-left" aria-hidden="true"></span>&nbsp;Cancel</button>
                </div>
            </div>

        </div>
    </div>
</div>
