@model IEnumerable<Maple2.AdminLTE.Bel.M_Location>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <!-- Bootstrap-Switch -->
    <link rel="stylesheet" href="~/plugins/bootstrap-switch/bootstrap-switch.min.css">
    <!-- DataTables -->
    <link rel="stylesheet" href="~/bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css">
    <!-- Buttons -->
    <link rel="stylesheet/scss" type="text/css" href="~/bower_components/datatables-buttons/css/buttons.dataTables.scss">
    <link rel="stylesheet" href="~/plugins/Buttons-1.6.1/css/buttons.dataTables.min.css">
    <!-- Input Picker -->
    <link rel="stylesheet" href="~/plugins/Input-picker/jquery.inputpicker.css">
}
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <!-- DataTables -->
    <script src="~/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
    <!-- Buttons -->
    <script src="~/plugins/Buttons-1.6.1/js/dataTables.buttons.min.js"></script>
    <script src="~/bower_components/datatables-buttons/js/dataTables.buttons.js"></script>
    <script src="~/bower_components/datatables-buttons/js/buttons.html5.js"></script>
    <script src="~/bower_components/datatables-buttons/js/buttons.flash.js"></script>
    <script src="~/bower_components/datatables-buttons/js/buttons.print.js"></script>
    <script src="~/bower_components/jszip/dist/jszip.min.js"></script>
    <!-- Bootstrap-Switch -->
    <script src="~/plugins/bootstrap-switch/bootstrap-switch.min.js"></script>
    <!-- Input Picker -->
    <script src="~/plugins/Input-picker/jquery.inputpicker.js"></script>
    <!-- page script -->
    <script src="~/js/Areas/Master/Location/Index.js"></script>
}

<div id="IndexData"
     data-loc-get-url="@Url.Action("GetLocation", "Location", new { Area = "Master" })"
     data-image-url="@Url.Content("~/img")">
</div>

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Location
        <small>Master</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#"> Master</a></li>
        <li class="active">Location</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="alert alert-success" id="message-alert" style="display:none">
                <button type="button" class="close" data-dismiss="alert">x</button>
                <strong>Success! </strong>
                <span id="sucAlertSpan">Location Status</span>&nbsp;
            </div>
            <div class="box">
                @*<div class="box-header">
                        <h3 class="box-title">Hover Data Table</h3>
                    </div>*@
                <div class="box-body">
                    <div class="table-responsive">
                        <table id="tblLocation" class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.LocationCode)</th>
                                    <th>@Html.DisplayNameFor(model => model.LocationName)</th>
                                    <th>@Html.DisplayNameFor(model => model.LocationDesc)</th>
                                    <th>@Html.DisplayNameFor(model => model.WarehouseId)</th>
                                    <th>@Html.DisplayNameFor(model => model.WarehouseName)</th>
                                    <th>@Html.DisplayNameFor(model => model.CompanyCode)</th>
                                    <th>@Html.DisplayNameFor(model => model.Is_Active)</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
                <div class="box-footer">
                    <button type="button" class="btn btn-create btn-sm" data-toggle="modal" data-url="@Url.Action("Create","Location", new { Area = "Master" })" id="btnCreateLocation">
                        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>&nbsp; Add
                    </button>
                </div>
            </div>
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->

<div class="modal fade" id="newLocationModal" tabindex="-1" role="dialog" aria-labelledby="CreateLocationModal" aria-hidden="true" data-backdrop="static">
    <div id="newLocationContainer">
    </div>
</div>

<div class="modal fade" id="viewLocationModal" tabindex="-1" role="dialog" aria-labelledby="ViewLocationModal" aria-hidden="true" data-backdrop="static">
    <div id="viewLocationContainer">
    </div>
</div>

<div class="modal fade" id="editLocationModal" tabindex="-1" role="dialog" aria-labelledby="EditLocationModal" aria-hidden="true" data-backdrop="static">
    <div id="editLocationContainer">
    </div>
</div>
