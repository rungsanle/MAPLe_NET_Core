@model Maple2.AdminLTE.Bel.M_Vendor

@{
    ViewData["Title"] = "Edit";
    Layout = null;
}
<script src="~/js/Areas/Master/Vendor/Edit.js"></script>
<div id="EditData"
     data-vend-edit-url="@Url.Action("Edit","Vendor", new { Area = "Master" })"
     data-viewbag-compcode="@ViewBag.CompCode">
</div>
<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span>&nbsp; Edit</h4>
        </div>

        <div class="box-body pad">

            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="Id" type="hidden" />

                <div class="form-group">
                    <label asp-for="VendorCode" class="control-label input-sm col-md-2"></label>
                    <div class="col-md-5">
                        <input asp-for="VendorCode" class="form-control input-sm text-code" />
                        <span asp-validation-for="VendorCode" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="VendorName" class="control-label input-sm col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="VendorName" class="form-control input-sm" />
                        <span asp-validation-for="VendorName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="AddressL1" class="control-label input-sm col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="AddressL1" class="form-control input-sm" />
                        <span asp-validation-for="AddressL1" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="AddressL2" class="control-label input-sm col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="AddressL2" class="form-control input-sm" />
                        <span asp-validation-for="AddressL2" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="AddressL3" class="control-label input-sm col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="AddressL3" class="form-control input-sm" />
                        <span asp-validation-for="AddressL3" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="AddressL4" class="control-label input-sm col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="AddressL4" class="form-control input-sm" />
                        <span asp-validation-for="AddressL4" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Telephone" class="control-label input-sm col-md-2"></label>
                    <div class="col-md-6">
                        <input asp-for="Telephone" class="form-control input-sm" />
                        <span asp-validation-for="Telephone" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Fax" class="control-label input-sm col-md-2"></label>
                    <div class="col-md-6">
                        <input asp-for="Fax" class="form-control input-sm" />
                        <span asp-validation-for="Fax" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="VendorEmail" class="control-label input-sm col-md-2"></label>
                    <div class="col-md-6">
                        <input asp-for="VendorEmail" class="form-control input-sm" />
                        <span asp-validation-for="VendorEmail" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="VendorContact" class="control-label input-sm col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="VendorContact" class="form-control input-sm" />
                        <span asp-validation-for="VendorContact" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="CreditTerm" class="control-label input-sm col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="CreditTerm" class="form-control input-sm" />
                        <span asp-validation-for="CreditTerm" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="PriceLevel" class="control-label input-sm col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="PriceLevel" class="form-control input-sm" />
                        <span asp-validation-for="PriceLevel" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="VendorTaxId" class="control-label input-sm col-md-2"></label>
                    <div class="col-md-8">
                        <input asp-for="VendorTaxId" class="form-control input-sm" />
                        <span asp-validation-for="VendorTaxId" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Remark" class="control-label input-sm col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="Remark" class="form-control input-sm" />
                        <span asp-validation-for="Remark" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="CompanyCode" class="control-label col-md-2"></label>
                    <div class="col-md-5">
                        <input asp-for="CompanyCode" class="form-control input-sm text-bold" style="width:160px;" placeholder="-- Please Select --" />
                        <span asp-validation-for="CompanyCode" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Is_Active" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <div class="checkbox">
                            <label>
                                <input asp-for="Is_Active" />
                            </label>
                        </div>
                        <span asp-validation-for="Is_Active" class="text-danger"></span>
                    </div>
                </div>

            </div>

            <div class="modal-footer">
                <div class="form-group">
                    <button type="button" id="btnSaveEdit" class="btn btn-save btn-sm"><span class="fa fa-save" aria-hidden="true"></span>&nbsp;Save</button>
                    &nbsp;
                    <button type="button" class="btn btn-cancel btn-sm" data-dismiss="modal"><span class="fa fa-rotate-left" aria-hidden="true"></span>&nbsp;Cancel</button>
                </div>
            </div>


        </div>
    </div>
</div>

