@model Maple2.AdminLTE.Bel.M_Menu

@{
    ViewData["Title"] = "Details";
    Layout = null;
}

<script src="~/js/Areas/Master/Menu/Details.js"></script>
<div id="DetailsData"
     data-menu-parent-url="@Url.Action("GetParrentMenu", "Menu", new { Area = "Master" })">
</div>
<div class="modal-dialog modal-lg">
    <div class="modal-content">

        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title"><span class="glyphicon glyphicon-search" aria-hidden="true"></span>&nbsp; View</h4>
        </div>
        <br />
        <div class="box-body pad">

            <div class="form-horizontal">

                <input asp-for="Id" type="hidden" />

                <div class="form-group">
                    <label asp-for="nameOption" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="nameOption" class="form-control input-sm text-bold" readonly="readonly" />
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="controller" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="controller" class="form-control input-sm" readonly="readonly" />
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="action" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="action" class="form-control input-sm" readonly />
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="imageClass" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="imageClass" class="form-control input-sm" readonly="readonly" />
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="status" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <div class="checkbox">
                            <label>
                                <input asp-for="status" />
                            </label>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="isParent" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <div class="checkbox">
                            <label>
                                <input asp-for="isParent" />
                            </label>
                        </div>
                    </div>
                </div>

                <input asp-for="parentId" type="hidden" />
                <div class="form-group">
                    <label asp-for="parentName" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="parentName" class="form-control input-sm text-bold" style="width: 200px;" disabled="disabled" />
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="area" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="area" class="form-control input-sm" readonly="readonly" />

                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="menuseq" class="control-label col-md-2"></label>
                    <div class="col-md-2">
                        <input asp-for="menuseq" class="form-control input-sm text-align-right" type="number" min="0" readonly="readonly" />
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Is_Active" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <div class="checkbox">
                            <label>
                                <input asp-for="Is_Active" />
                            </label>
                        </div>
                    </div>
                </div>

            </div>

            <div class="modal-footer">
                <div class="form-group">
                    <button type="button" class="btn btn-cancel btn-sm" data-dismiss="modal"><span class="fa  fa-rotate-left" aria-hidden="true"></span>&nbsp;Cancel</button>
                </div>
            </div>

        </div>
    </div>
</div>
