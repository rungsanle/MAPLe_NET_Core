@model Maple2.AdminLTE.Bel.M_Menu

@{
    ViewData["Title"] = "Create";
    Layout = null; 
}

<script src="~/js/Areas/Master/Menu/Create.js"></script>
<div id="CreateData"
     data-menu-add-url="@Url.Action("Create","Menu", new { Area = "Master" })"
     data-menu-parent-url="@Url.Action("GetParrentMenu", "Menu", new { Area = "Master" })">
</div>
<div class="modal-dialog modal-lg">
    <div class="modal-content">

        <div class="modal-header">

            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title"><i class="glyphicon glyphicon-plus"></i> Add</h4>
        </div>

        <div class="box-body pad">

            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="nameOption" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="nameOption" class="form-control input-sm text-bold" />
                        <span asp-validation-for="nameOption" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="controller" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="controller" class="form-control input-sm" />
                        <span asp-validation-for="controller" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="action" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="action" class="form-control input-sm" />
                        <span asp-validation-for="action" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="imageClass" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="imageClass" class="form-control input-sm" />
                        <span asp-validation-for="imageClass" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="status" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <div class="checkbox">
                            <label>
                                <input asp-for="status" />
                            </label>
                        </div>
                        <span asp-validation-for="status" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="isParent" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <div class="checkbox">
                            <label>
                                <input asp-for="isParent" />
                            </label>
                        </div>
                        <span asp-validation-for="isParent" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="parentName" class="control-label col-md-2"></label>
                    <div class="col-md-5">
                        <input asp-for="parentName" class="form-control input-sm text-bold" style="width:160px;" placeholder="-- Please Select --" />
                        <span asp-validation-for="parentName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="area" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="area" class="form-control input-sm" />
                        <span asp-validation-for="area" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="menuseq" class="control-label col-md-2"></label>
                    <div class="col-md-2">
                        <input asp-for="menuseq" class="form-control input-sm text-align-right" type="number" min="0" />
                        <span asp-validation-for="menuseq" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Is_Active" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <div class="checkbox">
                            <label>
                                <input asp-for="Is_Active" />
                            </label>
                        </div>
                        <span asp-validation-for="Is_Active" class="text-danger"></span>
                    </div>
                </div>

            </div>

            <div class="modal-footer">
                <div class="form-group">
                    <button type="button" id="btnSaveCreate" class="btn btn-save btn-sm"><span class="fa fa-save" aria-hidden="true"></span>&nbsp;Save</button>
                    &nbsp;
                    <button type="button" class="btn btn-cancel btn-sm" data-dismiss="modal"><span class="fa  fa-rotate-left" aria-hidden="true"></span>&nbsp;Cancel</button>
                </div>
            </div>


        </div>
    </div>
</div>
