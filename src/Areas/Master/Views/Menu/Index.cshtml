@model IEnumerable<Maple2.AdminLTE.Bel.M_Menu>
@{
    ViewData["Title"] = "Menu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
    <!-- DataTables -->
    <link rel="stylesheet" href="~/bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css">
    <!-- Bootstrap-Switch -->
    <link rel="stylesheet" href="~/plugins/bootstrap-switch/bootstrap-switch.min.css">
    <!-- Buttons -->
    <link rel="stylesheet/scss" type="text/css" href="~/bower_components/datatables-buttons/css/buttons.dataTables.scss">
    <link rel="stylesheet" href="~/plugins/Buttons-1.6.1/css/buttons.dataTables.min.css">
    <!-- Input Picker -->
    <link rel="stylesheet" href="~/plugins/Input-picker/jquery.inputpicker.css">
}
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <!-- DataTables -->
    <script src="~/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
    <!-- Buttons -->
    <script src="~/plugins/Buttons-1.6.1/js/dataTables.buttons.min.js"></script>
    <script src="~/bower_components/datatables-buttons/js/dataTables.buttons.js"></script>
    <script src="~/bower_components/datatables-buttons/js/buttons.html5.js"></script>
    <script src="~/bower_components/datatables-buttons/js/buttons.flash.js"></script>
    <script src="~/bower_components/datatables-buttons/js/buttons.print.js"></script>
    <script src="~/bower_components/jszip/dist/jszip.min.js"></script>
    <!-- Bootstrap-Switch -->
    <script src="~/plugins/bootstrap-switch/bootstrap-switch.min.js"></script>
    <!-- Input Picker -->
    <script src="~/plugins/Input-picker/jquery.inputpicker.js"></script>
    <!-- page script -->
    <script src="~/js/Areas/Master/Menu/Index.js"></script>
}
<div id="IndexData"
     data-menu-get-url="@Url.Action("GetMenu", "Menu", new { Area = "Master" })"
     data-image-url="@Url.Content("~/img")">
</div>
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Menu
        <small>Master</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-database"></i> Home</a></li>
        <li><a href="#"> Master</a></li>
        <li class="active">Menu</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <!-- Alert Message -->
            <div class="alert alert-success" id="message-alert" style="display:none">
                <button type="button" class="close" data-dismiss="alert">x</button>
                <strong>Success! </strong>
                <span id="sucAlertSpan">Department Status</span>&nbsp;
            </div>
            <div class="box">
                <div class="box-body">
                    <div class="table-responsive">
                        <table id="tblMenu" class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.nameOption)</th>
                                    <th>@Html.DisplayNameFor(model => model.controller)</th>
                                    <th>@Html.DisplayNameFor(model => model.action)</th>
                                    <th>@Html.DisplayNameFor(model => model.imageClass)</th>
                                    <th>@Html.DisplayNameFor(model => model.status)</th>
                                    <th>@Html.DisplayNameFor(model => model.isParent)</th>
                                    <th>@Html.DisplayNameFor(model => model.parentId)</th>
                                    <th>@Html.DisplayNameFor(model => model.parentName)</th>
                                    <th>@Html.DisplayNameFor(model => model.area)</th>
                                    <th>@Html.DisplayNameFor(model => model.menuseq)</th>
                                    <th>@Html.DisplayNameFor(model => model.Is_Active)</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    <button type="button" class="btn btn-create btn-sm" data-toggle="modal" data-url="@Url.Action("Create","Menu", new { Area = "Master" })" id="btnCreateMenu">
                        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>&nbsp; Add
                    </button>
                </div>
                <!-- /.box-footer -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
<div class="modal fade" id="newMenuModal" tabindex="-1" role="dialog" aria-labelledby="CreateMenuModal" aria-hidden="true" data-backdrop="static">
    <div id="newMenuContainer">
    </div>
</div>
<div class="modal fade" id="editMenuModal" tabindex="-1" role="dialog" aria-labelledby="EditMenuModal" aria-hidden="true" data-backdrop="static">
    <div id="editMenuContainer">
    </div>
</div>
<div class="modal fade" id="viewMenuModal" tabindex="-1" role="dialog" aria-labelledby="ViewMenuModal" aria-hidden="true" data-backdrop="static">
    <div id="viewMenuContainer">
    </div>
</div>
