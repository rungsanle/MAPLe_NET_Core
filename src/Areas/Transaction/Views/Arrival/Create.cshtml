                                            <span asp-validation-for="RawMatTypeName" class="text-danger"></span>
                                        </div>
                                        <div class="form-group col-sm-4">
                                            <label asp-for="ArrivalRemark" class="control-label input-sm"></label>
                                            <textarea asp-for="ArrivalRemark" class="form-control input-sm"></textarea>
                                            <span asp-validation-for="ArrivalRemark" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <div class="form-group col-sm-2">
                                            <label asp-for="VendorCode" class="control-label input-sm"></label>
                                            <input asp-for="VendorId" type="hidden" />
                                            <div class="input-group">
                                                <input asp-for="VendorCode" class="form-control input-sm text-code" />
                                                <span class="input-group-btn">
                                                    <button type="button" class="btn btn-browse btn-sm btn-flat" data-toggle="modal" id="btnSearchVendor">
                                                        <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                                                    </button>
                                                </span>
                                            </div>
                                            <span asp-validation-for="VendorId" class="text-danger"></span>
                                        </div>
                                        <div class="form-group col-sm-4">
                                            <label asp-for="VendorName" class="control-label input-sm"></label>
                                            <input asp-for="VendorName" class="form-control input-sm col-sm-4" readonly="readonly" />
                                            <span asp-validation-for="VendorName" class="text-danger"></span>
                                        </div>
                                        <div class="form-group col-sm-2">
                                            <label asp-for="PurchaseOrderNo" class="control-label input-sm"></label>
                                            <div class="input-group">
                                                <input asp-for="PurchaseOrderNo" class="form-control input-sm text-bold" />
                                                <span class="input-group-btn">
                                                    <button type="button" class="btn btn-default btn-sm btn-flat" data-toggle="tooltip" title="Search PO" id="btnSearchPO">
                                                        <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                                                    </button>
                                                </span>
                                            </div>
                                            <span asp-validation-for="PurchaseOrderNo" class="text-danger"></span>
                                        </div>
                                        <div class="form-group col-sm-2">
                                            <label asp-for="DocRefNo" class="control-label input-sm"></label>
                                            <div class="input-group">
                                                <input asp-for="DocRefNo" class="form-control input-sm text-upper" />
                                                <div class="input-group-addon">
                                                    <i class="fa  fa-file-o"></i>
                                                </div>
                                            </div>
                                            <span asp-validation-for="DocRefNo" class="text-danger"></span>
                                        </div>
                                        <div class="form-group col-sm-2">
                                            <label asp-for="DocRefDate" class="control-label input-sm"></label>
                                            <div class="input-group date">
                                                <input asp-for="DocRefDate" class="form-control input-sm" type="text" />
                                                <span class="input-group-addon" onclick="global.showDatepicker('DocRefDate');">
                                                    <i class="fa fa-calendar"></i>
                                                </span>
                                            </div>
                                            <span asp-validation-for="DocRefDate" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <div class="form-group col-sm-2">
                                        </div>
                                        <div class="form-group col-sm-4">
                                            <div class="space-height"></div>
                                            <input asp-for="VendorAddress" class="form-control input-sm col-sm-4" readonly="readonly" />
                                        </div>
                                        <div class="form-group col-sm-2">
                                            <div class="space-height"></div>
                                            <button type="button" id="btnGenPO" class="btn btn-default btn-sm"><span class="fa fa-indent" aria-hidden="true"></span>&nbsp;Generate Detail</button>
                                        </div>
                                        <div class="form-group col-sm-2">
                                            <label asp-for="CompanyCode" class="control-label input-sm"></label>
                                            <input asp-for="CompanyCode" class="form-control input-sm text-bold" style="width:200px;" placeholder="-- Please Select --" />
                                            <span asp-validation-for="CompanyCode" class="text-danger"></span>
                                        </div>
                                        <div class="form-group col-sm-2">
                                            <label asp-for="Is_Active" class="control-label input-sm"></label>
                                            <div class="checkbox2">
                                                <label>
                                                    <input asp-for="Is_Active" />
                                                </label>
                                            </div>
                                            <span asp-validation-for="Is_Active" class="text-danger"></span>
                                        </div>
                                    </div>

                                </div>

                            </div>

                        </div>
                        <!-- /.box-body -->
                    </div>

