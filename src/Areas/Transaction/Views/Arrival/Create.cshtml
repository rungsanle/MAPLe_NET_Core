                            </div>

                            <div class="form-group row">
                                <div class="form-group col-sm-2">
                                    <div class="space-height"></div>
                                    <button type="button" id="btnAddDtl" class="btn btn-default pull-right btn-sm"><span class="fa fa-indent" aria-hidden="true"></span>&nbsp;Add Record</button>
                                </div>
                                <div class="form-group col-sm-4">
                                </div>
                                <div class="form-group col-sm-2">
                                </div>
                                <div class="form-group col-sm-2">
                                </div>
                                <div class="form-group col-sm-2">
                                    <div class="space-height"></div>
                                    <button type="button" id="btnAddArrDtl" class="btn btn-default pull-right btn-sm"><span class="fa fa-indent" aria-hidden="true"></span>&nbsp;Add</button>
                                </div>
                            </div>

                        </div>
                        <!-- /.box-header -->
                        <div class="box-body table-responsive no-padding">

                            <table id="tblArrivalDtl" class="table table-striped table-bordered table-hover table-sm">  @*display compact*@
                                <thead>
                                    <tr>
                                        <th>ArrivalId</th>
