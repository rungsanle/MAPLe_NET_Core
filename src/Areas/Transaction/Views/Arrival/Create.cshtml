@model Maple2.AdminLTE.Bel.T_Arrival_Header

@{
    ViewData["Title"] = "Create";
    Layout = null;
}
<style>
    label.control-label {
        padding: 15px 0px 0px 3px !important;
    }

    div.form-group {
        padding-left: 5px !important;
        padding-right: 5px !important;
        margin-bottom: 0px !important;
    }

    div.space-height {
        height: 10px;
    }

    .dataTables_scrollBody {
        height: 350px;
        overflow-y: scroll !important;
    }

    /* For Firefox */
    input[type='number'] {
        -moz-appearance: textfield;
    }

    /* Webkit browsers like Safari and Chrome */
    input[type=number]::-webkit-inner-spin-button,
    input[type=number]::-webkit-outer-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    .dataTables_info {
        display: none;
    }

    .dataTables_empty {
        display: none;
    }


</style>
<script src="~/js/Areas/Transaction/Arrival/Create.js"></script>
<div id="CreateData"
     data-arrival-add-url="@Url.Action("Create", "Arrival", new { Area = "Transaction" })"
     data-arrdtl-get-url="@Url.Action("GetArrivalDetail", "Arrival", new { Area = "Transaction" })"
     data-arrtype-get-url="@Url.Action("GetArrivalType", "ArrivalType", new { Area = "Master" })"
     data-rawmattype-get-url="@Url.Action("GetRawMaterialType", "RawMaterialType", new { Area = "Master" })"
     data-vend-get-url="@Url.Action("GetVendor", "Arrival", new { Area = "Transaction" })"
     data-mat-get-url="@Url.Action("GetMaterial", "Arrival", new { Area = "Transaction" })"
     data-viewbag-compcode="@ViewBag.CompCode">
</div>

<div class="modal-dialog modal-full">


    <div class="modal-content">
        <div class="modal-header-search">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span>&nbsp; Add</h4>
        </div>
        <div class="box-body pad">
            <div class="row">
                <div class="col-xs-12">
                    <div class="box">
                        <!-- /.box-header -->
                        <div class="box-body">
                            <div class="row">
                                <div class="col-sm-12">

                                    <div class="form-group row">
                                        <div class="form-group col-sm-2">
                                            <label asp-for="ArrivalNo" class="control-label input-sm"></label>
                                            <div class="input-group">
                                                <input asp-for="ArrivalNo" class="form-control input-sm text-code" readonly="readonly" />
                                                <div class="input-group-addon">
                                                    <i class="fa  fa-file-o"></i>
                                                </div>
                                            </div>
                                            <span asp-validation-for="ArrivalNo" class="text-danger"></span>
                                        </div>
                                        <div class="form-group col-sm-2">
                                            <label asp-for="ArrivalDate" class="control-label input-sm"></label>
                                            <div class="input-group date">
                                                <input asp-for="ArrivalDate" class="datepicker form-control input-sm" type="datetime" />
                                                <span class="input-group-addon" onclick="global.showDatepicker('ArrivalDate');">
                                                    <i class="fa fa-calendar"></i>
                                                </span>
                                            </div>
                                            <span asp-validation-for="ArrivalDate" class="text-danger"></span>
                                        </div>
                                        <div class="form-group col-sm-2">
                                            <label asp-for="ArrivalTypeName" class="control-label input-sm"></label>
                                            <input asp-for="ArrivalTypeId" type="hidden" />
