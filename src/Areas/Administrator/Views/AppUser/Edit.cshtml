@model Maple2.AdminLTE.Uil.Areas.Administrator.Models.AppUserViewModel
@{
    ViewBag.Title = "Edit";
    Layout = null;
}
<script src="~/js/Areas/Administrator/AppUser/Edit.js"></script>
<div id="EditData"
     data-appu-edit-url="@Url.Action("EditAppUser","AppUser", new { Area = "Administrator" })"
     data-appu-editrole-url="@Url.Action("EditAppUserRole", "AppUser", new { Area = "Administrator" })"
     data-appu-delrole-url="@Url.Action("DeleteAppUserRole", "AppUser", new { Area = "Administrator" })">
</div>
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span>&nbsp; Edit</h4>
        </div>
        <br />
        <div class="box-body pad">

            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Id" class="control-label input-sm col-md-3"></label>
                    <div class="col-md-8">
                        <input asp-for="Id" class="form-control input-sm text-code" readonly="readonly" />
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="UserName" class="control-label input-sm col-md-3"></label>
                    <div class="col-md-8">
                        <input asp-for="UserName" class="form-control input-sm" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="control-label input-sm col-md-3"></label>
                    <div class="col-md-8">
                        <input asp-for="Email" class="form-control input-sm" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group has-feedback">
                    <label asp-for="Password" class="control-label input-sm col-md-3"></label>
                    <div class="col-md-8">
                        <input asp-for="Password" type="password" placeholder="-- IF WANT TO BE CHANGE --" class="form-control input-sm" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="PhoneNumber" class="control-label input-sm col-md-3"></label>
                    <div class="col-md-8">
                        <input asp-for="PhoneNumber" class="form-control input-sm" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Roles" class="control-label input-sm col-md-3"></label>
                    <div class="col-md-8">
                        <div class="table-responsive">
                            <table id="tblUserRole" class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th align="left" style="width:85%;">
                                            Select Role:&nbsp;
                                            @Html.DropDownList("AddRole")
                                        </th>
                                        <th style="width:15%;">
                                            <button type="button" id="btnAddRole" class="btn btn-default btn-sm" data-toggle="tooltip" title="Add Role"><span class="fa fa-calendar-plus-o" aria-hidden="true"></span></button>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Roles)
                                    {
                                        <tr>
                                            <td style="width:85%;">
                                                @Html.DisplayFor(modelItem => item)
                                            </td>
                                            <td style="width:15%;">
                                                <a id="delUserRole" class="btn btn-default btn-sm" data-toggle="tooltip" title="Remove" href="AppUser/DeleteAppUserRole/"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>

            </div>
            <div class="modal-footer">
                <div class="form-group">
                    <button type="button" id="btnSaveEdit" class="btn btn-default btn-sm"><span class="fa fa-save" aria-hidden="true"></span>&nbsp;Save</button>
                    <button type="button" class="btn btn-default btn-sm" data-dismiss="modal"><span class="fa fa-rotate-left" aria-hidden="true"></span>&nbsp;Cancel</button>
                </div>
            </div>

        </div>
    </div>
</div>