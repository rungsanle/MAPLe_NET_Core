@model Maple2.AdminLTE.Uil.Areas.Administrator.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = null;
}

<script src="~/js/Areas/Administrator/AppUser/Register.js"></script>
<div id="RegisterData"
     data-user-regis-url="@Url.Action("Register", "AppUser", new { Area = "Administrator" })">
</div>
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title"><i class="glyphicon glyphicon-registration-mark"></i> Register</h4>
        </div>
        <br />
        <div class="box-body pad">

            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="NameIdentifier" class="control-label input-sm col-md-4"></label>
                    <div class="col-md-7">
                        <div class="form-group has-feedback">
                            <input asp-for="NameIdentifier" class="form-control input-sm" placeholder="User name" , autocomplete="off" />
                            <span class="glyphicon glyphicon-user form-control-feedback"></span>
                            <span asp-validation-for="NameIdentifier" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="control-label input-sm col-md-4"></label>
                    <div class="col-md-7">
                        <div class="form-group has-feedback">
                            <input asp-for="Email" class="form-control input-sm" placeholder="Email" , autocomplete="off" />
                            <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="control-label input-sm col-md-4"></label>
                    <div class="col-md-7">
                        <div class="form-group has-feedback">
                            <input asp-for="Password" type="password" class="form-control input-sm" placeholder="Password" , autocomplete="off" />
                            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="control-label input-sm col-md-4"></label>
                    <div class="col-md-7">
                        <div class="form-group has-feedback">
                            <input asp-for="ConfirmPassword" type="password" class="form-control input-sm" placeholder="Password" , autocomplete="off" />
                            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-4"></div>
                    <div class="col-md-7" style="padding-left: 0px;">
                        <div class="checkbox icheck">
                            <label>
                                <input asp-for="IsAgree" type="checkbox" required data-msg="You must agree terms for registering.">&nbsp;&nbsp;I agree to the <a href="#">terms</a>
                                <span asp-validation-for="IsAgree" class="text-danger"></span>
                            </label>
                        </div>
                    </div>
                </div>


            </div>
            <div class="modal-footer">
                <div class="form-group">
                    <button type="button" id="btnRegister" class="btn btn-default btn-sm"><span class="fa fa-registered" aria-hidden="true"></span>&nbsp;Register</button>
                    <button type="button" class="btn btn-default btn-sm" data-dismiss="modal"><span class="fa fa-rotate-left" aria-hidden="true"></span>&nbsp;Cancel</button>
                </div>
            </div>

        </div>
    </div>
</div>
