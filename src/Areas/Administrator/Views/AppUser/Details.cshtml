@model Maple2.AdminLTE.Uil.Areas.Administrator.Models.AppUserViewModel
@{
    ViewBag.Title = "Details";
    Layout = null;
}

<script src="~/js/Areas/Administrator/AppUser/Details.js"></script>
<div id="DetailsData">
</div>
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span>&nbsp; View</h4>
        </div>
        <br />
        <div class="box-body pad">

            <div class="form-horizontal">

                <div class="form-group">
                    <label asp-for="Id" class="control-label input-sm col-md-3"></label>
                    <div class="col-md-8">
                        <input asp-for="Id" class="form-control input-sm text-code" readonly="readonly" />
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="UserName" class="control-label input-sm col-md-3"></label>
                    <div class="col-md-8">
                        <input asp-for="UserName" class="form-control input-sm" readonly="readonly" />
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="control-label input-sm col-md-3"></label>
                    <div class="col-md-8">
                        <input asp-for="Email" class="form-control input-sm" readonly="readonly" />
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="control-label input-sm col-md-3"></label>
                    <div class="col-md-8">
                        <input asp-for="Password" class="form-control input-sm" readonly="readonly" />
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="PhoneNumber" class="control-label input-sm col-md-3"></label>
                    <div class="col-md-8">
                        <input asp-for="PhoneNumber" class="form-control input-sm" readonly="readonly" />
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Roles" class="control-label input-sm col-md-3"></label>
                    <div class="col-md-8">
                        <div class="table-responsive">
                            <table id="tblUserRole" class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th align="left" style="width:85%;">
                                            Roles
                                        </th>
                                        <th style="width:15%;">
                                            &nbsp;
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Roles)
                                    {
                                        <tr>
                                            <td style="width:85%;">
                                                @Html.DisplayFor(modelItem => item)
                                            </td>
                                            <td style="width:15%;">
                                                &nbsp;
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>

            </div>
            <div class="modal-footer">
                <div class="form-group">
                    <button type="button" class="btn btn-default btn-sm" data-dismiss="modal"><span class="fa fa-rotate-left" aria-hidden="true"></span>&nbsp;Cancel</button>
                </div>
            </div>
        </div>
    </div>
</div>