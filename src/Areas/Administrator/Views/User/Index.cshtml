@model IEnumerable<Maple2.AdminLTE.Bel.M_User>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
    <!-- Bootstrap-Switch -->
    <link rel="stylesheet" href="~/plugins/bootstrap-switch/bootstrap-switch.min.css">
    <!-- DataTables -->
    <link rel="stylesheet" href="~/bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css">
    <!-- Buttons -->
    <link rel="stylesheet/scss" type="text/css" href="~/bower_components/datatables-buttons/css/buttons.dataTables.scss">
    <link rel="stylesheet" href="~/plugins/Buttons-1.6.1/css/buttons.dataTables.min.css">
    <!-- Input Picker -->
    <link rel="stylesheet" href="~/plugins/Input-picker/jquery.inputpicker.css">
}
@section Scripts {

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <!-- DataTables -->
    <script src="~/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
    <!-- Buttons -->
    <script src="~/plugins/Buttons-1.6.1/js/dataTables.buttons.min.js"></script>
    <script src="~/bower_components/datatables-buttons/js/dataTables.buttons.js"></script>
    <script src="~/bower_components/datatables-buttons/js/buttons.html5.js"></script>
    <script src="~/bower_components/datatables-buttons/js/buttons.flash.js"></script>
    <script src="~/bower_components/datatables-buttons/js/buttons.print.js"></script>
    <script src="~/bower_components/jszip/dist/jszip.min.js"></script>
    <!-- Bootstrap-Switch -->
    <script src="~/plugins/bootstrap-switch/bootstrap-switch.min.js"></script>
    <!-- Input Picker -->
    <script src="~/plugins/Input-picker/jquery.inputpicker.js"></script>
    <!-- page script -->
    <script src="~/js/Areas/Administrator/User/Index.js"></script>

}

<div id="IndexData"
     data-user-get-url="@Url.Action("GetUser", "User", new { Area = "Administrator" })"
     data-image-url="@Url.Content("~/img")">
</div>
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        User
        <small>Administrator</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Administrator</a></li>
        <li class="active">User</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-body">
                    <div class="table-responsive">
                        <table id="tblUser" class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.UserCode)</th>
                                    <th>@Html.DisplayNameFor(model => model.UserName)</th>
                                    <th>@Html.DisplayNameFor(model => model.EmpCode)</th>
                                    <th>@Html.DisplayNameFor(model => model.DeptId)</th>
                                    <th>@Html.DisplayNameFor(model => model.DeptName)</th>
                                    <th>@Html.DisplayNameFor(model => model.Position)</th>
                                    <th>@Html.DisplayNameFor(model => model.CompanyCode)</th>
                                    <th>@Html.DisplayNameFor(model => model.aspnetuser_Id)</th>
                                    <th>@Html.DisplayNameFor(model => model.Is_Active)</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
                <div class="box-footer">
                    <button type="button" class="btn btn-default btn-sm" data-toggle="modal" data-url="@Url.Action("Create","User", new { Area = "Administrator" })" id="btnCreateUser">
                        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>&nbsp; Add
                    </button>
                    &nbsp;
                    <button type="button" class="btn btn-default btn-sm" data-toggle="modal" data-url="@Url.Action("Register","User", new { Area = "Administrator" })" id="btnRegisterUser">
                        <span class="glyphicon glyphicon-user" aria-hidden="true"></span>&nbsp; Register
                    </button>
                    &nbsp;
                    <button type="button" class="btn btn-default btn-sm" data-toggle="modal" data-url="@Url.Action("ProductCard","User", new { Area = "Administrator" })" id="btnViewer">
                        <span class="glyphicon glyphicon-print" aria-hidden="true"></span>&nbsp; Report
                    </button>
                </div>
            </div>
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->

<div class="modal fade" id="newUserModal" tabindex="-1" role="dialog" aria-labelledby="CreateUserModal" aria-hidden="true" data-backdrop="static">
    <div id="newUserContainer">
    </div>
</div>

<div class="modal fade" id="viewUserModal" tabindex="-1" role="dialog" aria-labelledby="ViewUserModal" aria-hidden="true" data-backdrop="static">
    <div id="viewUserContainer">
    </div>
</div>

<div class="modal fade" id="editUserModal" tabindex="-1" role="dialog" aria-labelledby="EditUserModal" aria-hidden="true" data-backdrop="static">
    <div id="editUserContainer">
    </div>
</div>
